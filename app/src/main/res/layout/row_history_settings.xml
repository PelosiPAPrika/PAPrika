<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constOrderLayout"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp"
        >

        <TextView
            android:id="@+id/orderIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Order NÂº 12"
            android:fontFamily="@font/gabriel_sans"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/orderDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/orderIdTextView"
            android:text="20-Dec-22"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gabriel_sans"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/orderPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price: "
            app:layout_constraintBottom_toBottomOf="@+id/seeOrderDetailsButton"
            app:layout_constraintTop_toTopOf="@+id/seeOrderDetailsButton"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/orderIdTextView"
            android:fontFamily="@font/gabriel_sans"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/seeOrderDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/orderDateTextView"
            app:layout_constraintEnd_toEndOf="@+id/orderDateTextView"
            android:layout_marginTop="25dp"
            android:background="@drawable/order_history_details_bt_bg"
            android:text="Details"
            android:textAllCaps="false"
            android:fontFamily="@font/gabriel_sans"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
